@model ClaytonsOpinion.ViewModels.RestaurantViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="Restaurant" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Type"></label>
        <select asp-for="Restaurant.Type" asp-items="Html.GetEnumSelectList<ClaytonsOpinion.Data.Enums.RestaurantType>()" class="form-control">
            <option></option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Address1"></label>
        <input asp-for="Restaurant.Address1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Address2"></label>
        <input asp-for="Restaurant.Address2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.City"></label>
        <input asp-for="Restaurant.City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.State"></label>
        <select asp-for="Restaurant.State" asp-items="Html.GetEnumSelectList<ClaytonsOpinion.Data.Enums.State>()" class="form-control">
            <option></option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.ZipCode"></label>
        <input asp-for="Restaurant.ZipCode" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Create</button>
    </div>

</form>
